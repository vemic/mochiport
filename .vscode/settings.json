{
  // TypeScript設定
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "on",

  // ESLint設定
  "eslint.workingDirectories": [
    "frontend",
    "backend",
    "shared",
    "packages/ui-components"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Prettier設定
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ファイル監視設定
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true
  },

  // 検索設定
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/yarn.lock": true
  },

  // ファイル表示設定
  "files.exclude": {
    "**/.turbo": true
  },

  // Git設定
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,

  // ターミナル設定
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": ["-NoProfile"]
    }
  },

  // IntelliSense設定
  "typescript.suggest.paths": true,
  "typescript.workspaceSymbols.scope": "allOpenProjects",

  // Turbo設定 - すべての機能を無効化
  "turbo.useLocalTurbo": false,
  "turbo.experimental.ui": false,
  "turbo.daemon": false,
  "turbo.telemetry": false,
  "turbo.enabled": false,
  "turbo.lsp.enabled": false,
  "turbo.lsp.analyticsEnabled": false,

  // Next.js設定
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },

  // タスク設定
  "task.autoDetect": "on",
  "task.quickOpen.detail": true,
  "task.quickOpen.skip": false,

  // 自動保存設定
  "files.autoSave": "onFocusChange",

  // エディタ設定
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // 拡張機能設定
  "extensions.ignoreRecommendations": false,

  // Code Spell Checker設定 - 警告を無効化
  "cSpell.enabled": false,
  "cSpell.showStatus": false,
  "cSpell.diagnosticLevel": "Hint", // Jest設定 - モノレポ環境対応
  "jest.showCoverageOnLoad": false,
  "jest.debugMode": true,
  "jest.debugCodeLens.showWhenTestStateIn": ["fail", "unknown", "pass", "skip"],
  "jest.nodeEnv": {
    "NODE_ENV": "test",
    "NODE_OPTIONS": "--experimental-vm-modules",
    "TURBO_TELEMETRY_DISABLED": "1",
    "TURBO_DAEMON": "false"
  },
  "jest.monitorWorkspaceModifications": true,
  "jest.runMode": "watch",

  // ワークスペースフォルダごとのJest設定
  "jest.projectRoots": [
    "${workspaceFolder}/backend",
    "${workspaceFolder}/frontend",
    "${workspaceFolder}/shared"
  ],

  // バックエンド Jest 設定
  "jest.pathToJest.backend": "yarn workspace @mochiport/backend jest",
  "jest.pathToConfig.backend": "${workspaceFolder}/backend/jest.config.json",
  // フロントエンド Jest 設定
  "jest.pathToJest.frontend": "yarn workspace @mochiport/frontend jest",
  "jest.pathToConfig.frontend": "${workspaceFolder}/frontend/jest.config.js",

  // 共有モジュール Jest 設定
  "jest.pathToJest.shared": "yarn workspace @mochiport/shared jest",
  "jest.pathToConfig.shared": "${workspaceFolder}/shared/jest.config.js"
}
