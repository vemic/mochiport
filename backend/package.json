{
  "name": "@ai-chat/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build ; echo 'Backend compiled successfully. Azure Functions Core Tools temporarily disabled.'",
    "dev:watch": "tsc --watch",
    "start": "echo 'Azure Functions Core Tools temporarily disabled. Run: func host start --port 7071'",
    "clean": "powershell -Command \"Remove-Item -Path 'dist' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@ai-chat/shared": "*",
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.0.0",
    "concurrently": "^9.1.2",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "rimraf": "^6.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@ai-chat/eslint-config": "*",
    "@ai-chat/tsconfig": "*",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.7.2"
  }
}
