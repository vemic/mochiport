{
  "name": "@mochiport/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "yarn build && node --max-old-space-size=2048 dist/server.js",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon\"",
    "start": "node dist/server.js",
    "clean": "powershell -Command \"if(Test-Path 'dist'){Remove-Item -Path 'dist' -Recurse -Force}\"",
    "type-check": "tsc --noEmit",
    "test": "node --max-old-space-size=1024 ./node_modules/.bin/jest",
    "test:watch": "node --max-old-space-size=1024 ./node_modules/.bin/jest --watch",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@mochiport/shared": "*",
    "@supabase/supabase-js": "^2.49.10",
    "@types/express": "^4.17.21",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.0.0",
    "rimraf": "^6.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@mochiport/eslint-config": "*",
    "@mochiport/tsconfig": "*",
    "@types/cors": "^2.8.18",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.6.2",
    "typescript": "^5.7.2"
  }
}
