# Production Configuration for Windows Standalone Server
NODE_ENV=production
PORT=7071

# CORS Settings (adjust to your domain)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Supabase Configuration (REQUIRED - Replace with actual values)
SUPABASE_URL=your-production-supabase-url-here
SUPABASE_ANON_KEY=your-production-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key-here

# Azure OpenAI Configuration (REQUIRED - Replace with actual values)
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint-here
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_MODEL_NAME=gpt-4

# Service Configuration
USE_MOCK_AI_SERVICE=false
USE_MOCK_DATABASE=false

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log

# Health Check
HEALTH_CHECK_INTERVAL=30000

# SSL/HTTPS (if using)
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem
# ENABLE_HTTPS=false
