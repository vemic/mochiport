{
  "name": "ai-chat-management-app",
  "private": true,
  "version": "1.0.0",
  "description": "拡張性重視のAIチャット管理アプリケーション",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.0",
    "typescript": "^5.2.0"
  },  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "frontend",
    "backend", 
    "shared",
    "packages/*",
    "apps/*"
  ]
}
